# Allman Style C Formatter Configuration
# This configuration enforces the Allman brace style for C code

# Allman Style: Opening and closing braces on separate lines
BreakBeforeBraces: Allman

# Indentation settings
IndentWidth: 4
UseTab: Never
TabWidth: 4

# Column limit (line width)
ColumnLimit: 80

# Pointer alignment
PointerAlignment: Left

# Spacing settings
SpaceBeforeAssignmentOperators: true
SpaceAfterCStyleCast: true
SpaceBeforeParens: ControlStatements
SpacesBeforeTrailingComments: 2

# Control statement settings
IndentCaseLabels: true
AllowShortCaseLabelsOnASingleLine: false
AllowShortFunctionsOnASingleLine: None
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false

# Function declaration style - return type on separate line
BreakAfterReturnType: All

# Alignment settings
AlignOperands: Align
AlignConsecutiveAssignments: false
AlignConsecutiveDeclarations: false

# Comment settings
ReflowComments: true
SpaceInEmptyParentheses: false

# Line breaking
BreakStringLiterals: true
BreakBeforeBinaryOperators: NonAssignment

# Other settings
InsertBraces: true

# Sorted includes
SortIncludes: CaseInsensitive
